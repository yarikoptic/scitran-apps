{
    "description": "Attempts to convert a dicom series to nifti.",
    "author": "Kevin S. Hahn",
    "version": "0.0.1",
    "command": "dcm2nii",
    "inputs": [
        {
            "flag": "--input",
            "type": "dicom",
            "kinds": "undefined",
            "state": 'orig'
        }
    ]
    "outputs": [
        {
            "file_ext": ".nii.gz"
            "state": "derived",
            "type": "nifti",
            "kinds": "undefined",
        },
        {
            "file_ext": ".bvec",
            "state": "derived",
            "type": "text",
            "kinds": "bvec",
        },
        {
            "file_ext": ".bval",
            "state": "derived",
            "type": "text",
            "kinds": "bval",
        }
    ]
}
